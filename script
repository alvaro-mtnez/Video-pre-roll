<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video Player with Ads</title>
    <style>
        /* Estilos del reproductor */
        #video-container {
            position: relative;
            width: 100%;
            max-width: 533px;
            margin: 0 auto;
        }

        video {
            display: block;
            width: 100%;
            border-radius: 8px;
        }

        .controls {
            position: absolute;
            bottom: 10px;
            left: 10px;
            right: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: #fff;
        }

        .progress-bar {
            flex-grow: 1;
            height: 5px;
            background: #ccc;
            margin: 0 10px;
            border-radius: 5px;
            cursor: pointer;
        }

        .progress-bar span {
            display: block;
            height: 100%;
            background: #ff0000;
            width: 0%;
            border-radius: 5px;
        }

        .volume {
            cursor: pointer;
        }

        .slider {
            position: fixed;
            bottom: 10px;
            right: 10px;
            width: 300px;
            max-width: 400px;
            transform: translateY(100%);
            transition: transform 0.3s ease-in-out;
        }

        .slider.active {
            transform: translateY(0);
        }
    </style>
