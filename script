<body>

    <!-- Contenedor del reproductor -->
    <div id="video-container">
        <video id="player" autoplay muted preload="metadata">
            <source src="your-placeholder-video.mp4" type="video/mp4">
            Tu navegador no soporta este reproductor.
        </video>
        <div class="controls">
            <button id="play-pause">‚ñ∂Ô∏è</button>
            <div class="progress-bar" id="progress">
                <span></span>
            </div>
            <button class="volume" id="volume-toggle">üîà</button>
        </div>
    </div>

    <script>
        const player = document.getElementById('player');
        const playPause = document.getElementById('play-pause');
        const progressBar = document.getElementById('progress');
        const progressSpan = progressBar.querySelector('span');
        const volumeToggle = document.getElementById('volume-toggle');
        
        let adLoaded = false;
        
        // Reproducir o pausar
        playPause.addEventListener('click', () => {
            if (player.paused) {
                player.play();
                playPause.textContent = '‚è∏Ô∏è';
            } else {
                player.pause();
                playPause.textContent = '‚ñ∂Ô∏è';
            }
        });
        
        // Actualizar barra de progreso
        player.addEventListener('timeupdate', () => {
            const progress = (player.currentTime / player.duration) * 100;
            progressSpan.style.width = `${progress}%`;
        });
        
        // Toggle volumen
        volumeToggle.addEventListener('click', () => {
            player.muted = !player.muted;
            volumeToggle.textContent = player.muted ? 'üîà' : 'üîä';
        });
        
        // Llamada a GAM
        function loadAd() {
            if (!adLoaded) {
                console.log("Llamando a GAM...");
                googletag.cmd.push(function() {
                    googletag.defineSlot('/21634166200/rich/video_pre-roll', [640, 480], 'gpt-video-ad')
                        .addService(googletag.pubads());
                    googletag.enableServices();
                    googletag.display('gpt-video-ad');
                });
                adLoaded = true;
            }
        }
        
        // Lazy load
        document.addEventListener('DOMContentLoaded', () => {
            setTimeout(() => {
                loadAd();
            }, 1000);
        });
    </script>

    <!-- Google Ad Manager Script -->
    <script async src="https://securepubads.g.doubleclick.net/tag/js/gpt.js"></script>
    <script>
        var googletag = googletag || {};
        googletag.cmd = googletag.cmd || [];
    </script>

</body>
</html>
